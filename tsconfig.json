{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es2015",
      "es6",
      "dom",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*",
    "src/Ambient-Types/External Modules/@deck.gl"
  ],
  "exclude": [
    "node_modules",
  ]
}